{
  "manifest_version": 3,
  "name": "Gestor Veículos",
  "version": "1.0.0",
  "description": "Sistema Web para gestão de veículos e motorista.",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.png",
      "48": "favicon.png"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "app.js"
  }
}
